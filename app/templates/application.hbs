{{page-title "Rock & Roll with Octane"}}

<div class="bg-blue-900 text-gray-100 p-8 h-screen">
    <div class="mx-auto mb-4">
        <div class="h-12 flex items-center mb-4 border-b-2">
            <a href="#">
                <h1 class="font-bold text-2x1">
                    Rock & Roll <span class="font-normal">with Octane</span>
                </h1>
            </a>
        </div>
        <ul>
            <!-- Ratings based on what a normal person would rate them -->
            {{#each
                (array
                    (hash title="Ultra Violent Light Cannon" band="Newgrounds Death Rugby" rating=2)
                    (hash title="pretty girl snuff film" band="Bird Fear Death" rating=1)
                    (hash title="lost cause// (with grandson)" band="Kennyhoopla" rating=4)
                ) as |song|
            }}
                <li>
                    {{song.title}} by {{song.band}} - {{song.rating}}
                </li>
            {{/each}}
        </ul>
    </div>
</div>